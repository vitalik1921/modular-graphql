{
    "name": "express-typescript-node",
    "version": "0.1.0",
    "author": "Vitalii Shebela",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "webpack",
        "serve": "node dist/bundle.js",
        "watch-node": "nodemon dist/bundle.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "webpack",
        "watch-ts": "webpack --watch",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color --fix",
        "serve-debug": "nodemon --inspect dist/bundle.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "@types/express": "^4.17.1",
        "@types/lodash": "^4.14.150",
        "@types/mongoose": "^5.7.10",
        "apollo-server-express": "^2.3.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "graphql": "^14.0.2",
        "lodash": "^4.17.15",
        "mongoose": "^5.9.9"
    },
    "devDependencies": {
        "@types/concurrently": "^4.1.0",
        "@types/eslint": "^6.8.0",
        "@types/jest": "^24.0.23",
        "@types/node": "^13.13.0",
        "@typescript-eslint/eslint-plugin": "2.26.0",
        "@typescript-eslint/parser": "2.26.0",
        "concurrently": "^5.0.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.1",
        "eslint-loader": "^4.0.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-prettier": "3.1.2",
        "jest": "^24.9.0",
        "nodemon": "^1.19.2",
        "prettier": "2.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.2.2",
        "ts-node": "^8.4.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    }
}
